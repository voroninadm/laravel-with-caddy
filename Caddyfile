localhost.test {
    # Используем self-signed TLS (для локальной разработки)
    tls internal

    # Корневая папка Laravel
    root * /srv/public

    # Сжатие
    encode gzip

    # PHP FastCGI
    php_fastcgi app:9000 {
        env APP_ENV production
        env APP_DEBUG false
    }

    # Раздача файлов
    file_server {
        hide .env
        hide .git
        hide .gitignore
        hide composer.*
        hide package.json
    }

    # Доступ к storage
    handle_path /storage/* {
        root * /srv
        file_server {
            browse
        }
    }

    # Логи
    log {
        output stdout
        format console
    }
}
